                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="菌物类别 "
                    android:textColor="#111"
                    android:textSize="15sp" />

